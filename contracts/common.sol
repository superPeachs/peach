contract common is Ownable{
    using SafeMath for uint256;
    address public pancakeRouterAddr = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
    address public USDTAddress  = 0x55d398326f99059fF775485246999027B3197955;
    
    IPancakeRouter02 pancakeRouter = IPancakeRouter02(pancakeRouterAddr);
    
    function updateRouter(address newRouter) public onlyOwner {
        pancakeRouterAddr = newRouter;
        pancakeRouter = IPancakeRouter02(newRouter);
    }
    
    function updateUsdt(address newUsdt) public onlyOwner {
        USDTAddress = newUsdt;
    }

    function totalLiquidityPoolOfBNB(address pair) public view returns(uint256){
        address[] memory path = new address[](2);
        path[0] = pancakeRouter.WETH();
        path[1] = USDTAddress;
        uint[] memory result = pancakeRouter.getAmountsOut(liquidityPoolValueOfBNB(pair),path);
        return result[1];
    }

    function liquidityPoolValueOfBNB(address pair) public view returns(uint256){
        uint256 bnbBalanceOfPair = IBEP20(pancakeRouter.WETH()).balanceOf(pair);
        return  bnbBalanceOfPair.mul(2);
    }

    function totalLiquidityPoolOfUSDT(address pair) public view returns(uint256){
        uint256 usdtBalanceOfPair = IBEP20(USDTAddress).balanceOf(pair);
        return  usdtBalanceOfPair.mul(2);
    }
    
    function totalValueLockedForBnbPool(address pair, uint256 totalDeposit) external view returns(uint256){
        return totalLiquidityPoolOfBNB(pair).mul(totalDeposit).div(IBEP20(pair).totalSupply());
    }
    
    function totalValueLockedForUsdtPool(address pair, uint256 totalDeposit) external view returns(uint256){
        return totalLiquidityPoolOfUSDT(pair).mul(totalDeposit).div(IBEP20(pair).totalSupply());
    }
    
    function lpPriceForBnbPool(address pair) external view returns(uint256){
        return totalLiquidityPoolOfBNB(pair).mul(10 ** 18).div(IBEP20(pair).totalSupply());
    }
    
    function lpPriceForUsdtPool(address pair) external view returns(uint256) {
        return totalLiquidityPoolOfUSDT(pair).mul(10 ** 18).div(IBEP20(pair).totalSupply());
    }
    
    function pairSupply(address pair) external view returns(uint256) {
        return IBEP20(pair).totalSupply();
    }

    function queryTokenPrice2USDT(address tokenAddress) external view returns(uint256 priceOfToken){
        if(tokenAddress == USDTAddress){
            return 1e18;
        }
        uint amount = 1 * 10 ** 18;
        address[] memory path = new address[](2);
        path[0] = tokenAddress;
        path[1] = USDTAddress;
        uint[] memory result = pancakeRouter.getAmountsOut(amount, path);
        priceOfToken = result[1];
    }

    function queryTokenPrice2BNB2USDT(address tokenAddress)external view returns(uint256 priceOfToken){
        uint amount = 1 * 10 ** 18;
        address[] memory path = new address[](3);
        path[0] = tokenAddress;
        path[1] = pancakeRouter.WETH();
        path[2] = USDTAddress;
        uint[] memory result = pancakeRouter.getAmountsOut(amount, path);
        priceOfToken = result[2];
    }
}
